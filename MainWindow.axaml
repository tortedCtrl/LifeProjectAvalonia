<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="LifeProjectAvalonia.MainWindow"
        Title="Game of Life"
        Width="900"
        Height="900">

	<DockPanel Margin="10">

		<!-- Верхняя часть - заголовок -->
		<TextBlock DockPanel.Dock="Top"
                   Text="Life"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

		<!-- Нижняя часть - элементы управления -->
		<StackPanel DockPanel.Dock="Bottom"
                    Orientation="Vertical"
                    Spacing="10"
                    Margin="0,20,0,0">

			<!-- Поля ввода для чисел -->
			<StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="10">
				<StackPanel>
					<TextBlock Text="Ширина (X):"
                               Margin="0,0,0,5"/>
					<TextBox x:Name="WidthTextBox"
                             Width="100"
                             Text="50"/>
				</StackPanel>

				<StackPanel>
					<TextBlock Text="Высота (Y):"
                               Margin="0,0,0,5"/>
					<TextBox x:Name="HeightTextBox"
                             Width="100"
                             Text="50"/>
				</StackPanel>
			</StackPanel>

			<!-- Checkbox -->
			<CheckBox x:Name="WrapCheckBox"
                      Content="Случайное создание"
                      HorizontalAlignment="Center"
					  IsChecked="True"/>

			<!-- Слайдер -->
			<StackPanel>
				<TextBlock Text="Скорость игры:"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
				<Slider x:Name="SpeedSlider"
                        Width="200"
                        Minimum="100"
                        Maximum="1000"
                        Value="300"
                        TickFrequency="100"
                        IsSnapToTickEnabled="True"/>
				<TextBlock Text="{Binding #SpeedSlider.Value, StringFormat='{}{0:F0} мс'}"
                           HorizontalAlignment="Center"
                           FontSize="10"/>
			</StackPanel>
		</StackPanel>

		<!-- Центральная часть - кнопка -->
		<Button x:Name="StartButton"
                Content="Начать"
                FontSize="16"
                Width="120"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>

	</DockPanel>
</Window>